/* Star rating system css */
.star{
  color: goldenrod;
  font-size: 1.5.0rem;
    margin: -6px;

}
.star::before{
  content: '\2606';    /* star outline */
  cursor: pointer;
}
.star.rated::before{
  /* the style for a selected star */
  content: '\2605';  /* filled star */
}

.stars{
    counter-reset: rateme 0;
    font-size: 2rem;
    font-weight: 900;
    margin-top: 10px;


}
.star.rated{
    counter-increment: rateme 1;
}
.stars::after{
    content: counter(rateme) '/5';
}


